@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.HandpieceModelSchematicEditImageModel
@{
    ViewBag.Title = $"Edit schematic {Model.Title}";
    this.ConfigureHybridPage("HandpieceModelSchematicEditImage");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Edit schematic @Model.Title</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Details" asp-route-id="@Model.Parent.Id" asp-controller="HandpieceModels" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }

    <form asp-action="EditImage" asp-route-id="@Model.Original.Id" hybrid-form-id="HandpieceModelSchematicEditImage" id="HandpieceModelSchematicEditImageForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-12 col-sm-7 col-md-8 mb-2">
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Title" class="k-textbox w-100" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-5 col-md-4 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Display"></label>
                    </div>
                    <div class="col-7 col-checkbox">
                        @(Html.Kendo().CheckBoxFor(x => x.Display).HtmlAttributes(new { @class = "form-control" }).Label(""))
                        <span asp-validation-for="Display" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <label asp-for="ImageId"></label>
            </div>
        </div>

        <div class="row mb-2" style="min-height: 800px">
            <div class="col-12">
                <image-uploader asp-for="ImageId" configuration="HandpieceModelSchematic" preview-variation="600"></image-uploader>
                <span asp-validation-for="ImageId" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Details" asp-route-id="@Model.Parent.Id" asp-controller="HandpieceModels" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>
