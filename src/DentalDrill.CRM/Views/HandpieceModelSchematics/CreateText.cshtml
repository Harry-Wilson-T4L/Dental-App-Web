@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@using DentalDrill.CRM.Services.Theming
@model DentalDrill.CRM.Models.ViewModels.HandpieceModelSchematicEditTextModel
@inject IThemesService Theme
@{
    ViewBag.Title = $"Add text schematic";
    this.ConfigureHybridPage("HandpieceModelSchematicCreateText");
    var editorStyles = new String[1];
    editorStyles[0] = await Theme.ResolveResourcePath("/css/editor.min.css");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Add text schematic</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Details" asp-route-id="@Model.Parent.Id" asp-controller="HandpieceModels" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }

    <form asp-action="CreateText" asp-route-parentId="@Model.Parent.Id" hybrid-form-id="HandpieceModelSchematicCreateText" id="HandpieceModelSchematicCreateTextForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-12 col-sm-7 col-md-8 mb-2">
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Title" class="k-textbox w-100" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-5 col-md-4 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Display"></label>
                    </div>
                    <div class="col-7 col-checkbox">
                        @(Html.Kendo().CheckBoxFor(x => x.Display).HtmlAttributes(new { @class = "form-control" }).Label(""))
                        <span asp-validation-for="Display" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-12">
                <label asp-for="Text"></label>
            </div>
            <div class="col-12">
                <kendo-editor name="HandpieceModelSchematicTextEditor" for="Text" style="height: 600px" encoded="false" stylesheets="@editorStyles"></kendo-editor>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Details" asp-route-id="@Model.Parent.Id" asp-controller="HandpieceModels" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>