@using DevGuild.AspNetCore.Controls.HybridForms
@using Kendo.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using DentalDrill.CRM.Extensions
@model DentalDrill.CRM.Models.ViewModels.Corporates.CorporateCreateModel
@{
    ViewBag.Title = "Create corporate";
    this.ConfigureHybridPage("CorporatesCreate");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Create corporate</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Index" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    <form asp-action="Create" hybrid-form-id="CorporatesCreate" id="CorporatesCreateForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-12 col-sm-5 col-md-6 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Name" class="k-textbox" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>