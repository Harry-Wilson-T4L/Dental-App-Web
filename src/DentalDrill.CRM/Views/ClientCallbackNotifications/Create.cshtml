@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.ClientCallbackNotificationEditModel
@{
    ViewBag.Title = "New Callback";
    this.ConfigureHybridPage("CreateCallbackNotification");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>New Callback</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Details" asp-controller="Clients" asp-route-id="@Model.Parent.Id" asp-route-Tab="Callback" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    
    <form asp-action="Create" asp-route-parentId="@Model.Parent.Id" hybrid-form-id="CreateCallbackNotification">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        
        <div class="row">
            <div class="col-6 mb-2">
                @Html.LabelFor(x => x.AssignedToId)
                @Html.Kendo().DropDownListFor(x => x.AssignedToId).BindTo(new SelectList(Model.Employees.Select(x => new { Id = x.Id, Name = x.GetFullName() }), "Id", "Name").WithNull("(none)"))
                @Html.ValidationMessageFor(x => x.AssignedToId)
            </div>
            <div class="col-6 mb-2">
                @Html.LabelFor(x => x.CallDateTime)
                @Html.Kendo().DateTimePickerFor(x => x.CallDateTime).HtmlAttributes(new { @class = "w-100" })
                @Html.ValidationMessageFor(x => x.CallDateTime)
            </div>
            <div class="col-12 mb-2">
                @Html.LabelFor(x => x.Note)
                @Html.Kendo().TextBoxFor(x => x.Note)
                @Html.ValidationMessageFor(x => x.Note)
            </div>
        </div>
        
        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Details" asp-controller="Clients" asp-route-id="@Model.Parent.Id" asp-route-Tab="Callback" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>
