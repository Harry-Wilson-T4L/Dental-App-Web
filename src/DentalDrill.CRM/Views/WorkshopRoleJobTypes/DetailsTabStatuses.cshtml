@model WorkshopRoleJobType
@{
    Layout = null;
}

<kendo-grid name="WorkshopRoleJobTypeStatusesGrid" height="630" data-parent-id="@Model.Id">
    <columns>
        <column field="JobStatus" title="Job Status" width="100" />
        <column field="JobTransitions" title="Job Transitions" width="150" />
        <column field="HandpieceTransitionsFrom" title="Handpiece Transitions From" width="250" />
        <column field="HandpieceTransitionsTo" title="Handpiece Transitions To" width="250" />
        <column width="150">
            <commands>
                <column-command name="CustomEdit" click="DentalDrill.CRM.Pages.WorkshopRoleJobTypeStatuses.Index.WorkshopRoleJobTypeStatusesGrid.handleEdit" text="@("<span class=\"fas fa-fw fa-pencil-alt\"></span>")"></column-command>
            </commands>
        </column>
    </columns>
    <toolbar>
    </toolbar>
    <column-menu enabled="false" />
    <editable enabled="false" />
    <pageable enabled="true" />
    <scrollable enabled="true" />
    <datasource type="DataSourceTagHelperType.Ajax" page-size="100">
        <transport>
            <read url="@Url.Action("Read", "WorkshopRoleJobTypeStatuses", new { parentId = Model.Id })" />
        </transport>
        <schema>
            <model id="Id">
                <fields>
                    <field name="JobStatus"></field>
                    <field name="JobTransitions"></field>
                    <field name="HandpieceTransitionsFrom"></field>
                    <field name="HandpieceTransitionsTo"></field>
                </fields>
            </model>
        </schema>
    </datasource>
</kendo-grid>