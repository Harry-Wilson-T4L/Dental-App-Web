@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.WorkshopRoleJobTypes.WorkshopRoleJobTypeCreateModel
@{
    ViewBag.Title = "Create workshop role job type permissions";
    this.ConfigureHybridPage("WorkshopRoleJobTypesCreate");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Create workshop role job type permissions</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Details" asp-controller="WorkshopRoles" asp-route-id="@Model.Parent.Id" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    <form asp-action="Create" asp-route-parentId="@Model.Parent.Id" hybrid-form-id="WorkshopRoleJobTypesCreate" id="WorkshopRoleJobTypesCreateForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-sm-5">
                        <label asp-for="JobTypeId"></label>
                    </div>
                    <div class="col-sm-7">
                        <kendo-dropdownlist for="JobTypeId" bind-to="@(new SelectList(Model.JobTypes, "Id", "Name"))" value="@Model.JobTypeId" />
                        <span asp-validation-for="JobTypeId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Details" asp-controller="WorkshopRoles" asp-route-id="@Model.Parent.Id" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>