@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.JobHandpieceEditModel
@{
    ViewBag.Title = $"Add Handpiece to Estimate #{Model.Parent.JobNumber}";
    Layout = "_FullLayout";
    this.ConfigureHybridPage("HandpiecesCreate");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1 style="font-size: 2rem">Add Handpiece to Estimate #@Model.Parent.JobNumber</h1>
            </div>
            <div class="editor__actions">
                <a class="details__action" asp-action="Details" asp-controller="Jobs" asp-route-id="@Model.Parent.Id"><span class="fas fa-fw fa-level-up-alt"></span></a>
            </div>
        </div>
    }

    <form asp-action="Create" asp-route-parentId="@Model.Parent.Id" hybrid-form-id="HandpiecesCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <partial name="_EditContent" model="@Model" />
        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Details" asp-controller="Jobs" asp-route-id="@Model.Parent.Id" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>