@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.UserDetailsViewModel
@{
    ViewBag.Title = $"User {Model.User.UserName}";
    this.ConfigureHybridPage("UsersDetails");
}

<div class="details">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="details__header">
            <div class="details__title">
                <h1>User @Model.User.UserName</h1>
            </div>
            <div class="details__actions">
                <a asp-action="Index" class="details__action"><span class="fas fa-list"></span> List</a>
                <a asp-action="Edit" asp-route-id="@Model.User.Id" class="details__action"><span class="fas fa-pencil-alt"></span> Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.User.Id" class="details__action details__action_color_red"><span class="fas fa-trash-alt"></span> Delete</a>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-6">
            <div class="row details__field">
                <div class="details__label">UserName</div>
                <div class="details__value">@Model.User.UserName</div>
            </div>
            <div class="row details__field">
                <div class="details__label">Email</div>
                <div class="details__value">@Model.User.Email</div>
            </div>
            <div class="row details__field">
                <div class="details__label">Password</div>
                <div class="details__value">********</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row details__field">
                <div class="details__label">Role</div>
                <div class="details__value">@Model.GetRolesNames()</div>
            </div>
            <div class="row details__field">
                <div class="details__label">Lockout enabled</div>
                <div class="details__value">
                    @if (Model.User.LockoutEnabled)
                    {
                        if (Model.User.LockoutEnd == null || Model.User.LockoutEnd < DateTimeOffset.UtcNow)
                        {
                            <span>Enabled</span>
                        }
                        else
                        {
                            <span>Enabled, Active until @Model.User.LockoutEnd.Value.ToString("G")</span>
                        }
                    }
                    else
                    {
                        <span>Disabled</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
