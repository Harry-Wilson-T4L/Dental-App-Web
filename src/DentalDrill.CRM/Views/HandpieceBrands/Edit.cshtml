@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.HandpieceBrandEditModel
@{
    ViewBag.Title = "Edit brand";
    this.ConfigureHybridPage("HandpieceBrandEdit");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Edit brand</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Index" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    <form asp-action="Edit" asp-route-id="@Model.Original.Id" hybrid-form-id="HandpieceBrandEdit" id="HandpieceBrandEditForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-12 col-sm-5 col-md-4 mb-2">
                <div class="row">
                    <div class="col-12">
                        <label asp-for="ImageId"></label>
                    </div>
                    <div class="col-12">
                        <image-uploader asp-for="ImageId" configuration="HandpieceBrand" preview-variation="300"></image-uploader>
                        <span asp-validation-for="ImageId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-7 col-md-8 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Name" class="k-textbox w-100" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>