@using DentalDrill.CRM.Models.Permissions
@model DentalDrill.CRM.Models.ViewModels.EmployeeRoles.EmployeeRoleDetailsModel
@{
    Layout = null;
}

<kendo-grid name="EmployeeRoleWorkshopsGrid" height="630" data-parent-id="@Model.Id">
    <columns>
        <column field="WorkshopName" title="Workshop" width="200" />
        <column field="WorkshopRoleName" title="Role" width="200" />
        <column field="EmployeeTypeName" title="Notifications role" width="200" />
        <column width="150">
            <commands>
                <column-command name="CustomDetails" click="DentalDrill.CRM.Pages.EmployeeRoleWorkshops.Index.EmployeeRoleWorkshopsGrid.handleDetails" text="@("<span class=\"fas fa-fw fa-external-link-alt\"></span>")"></column-command>
                @if (Model.Access.Global.CanWriteComponent(GlobalComponent.EmployeeRole))
                {
                    <column-command name="CustomEdit" click="DentalDrill.CRM.Pages.EmployeeRoleWorkshops.Index.EmployeeRoleWorkshopsGrid.handleEdit" text="@("<span class=\"fas fa-fw fa-pencil-alt\"></span>")"></column-command>
                    <column-command name="CustomDelete" click="DentalDrill.CRM.Pages.EmployeeRoleWorkshops.Index.EmployeeRoleWorkshopsGrid.handleDelete" text="@("<span class=\"fas fa-fw fa-trash-alt\"></span>")"></column-command>
                }
            </commands>
        </column>
    </columns>
    <toolbar>
        @if (Model.Access.Global.CanWriteComponent(GlobalComponent.EmployeeRole))
        {
            <toolbar-button name="CustomCreate" text="@("<span class=\"fas fa-fw fa-plus\"></span> Create")"></toolbar-button>
        }
    </toolbar>
    <column-menu enabled="false" />
    <editable enabled="false" />
    <pageable enabled="true" />
    <scrollable enabled="true" />
    <datasource type="DataSourceTagHelperType.Ajax" page-size="100">
        <transport>
            <read url="@Url.Action("Read", "EmployeeRoleWorkshops", new { parentId = Model.Id })" />
        </transport>
        <schema>
            <model id="Id">
                <fields>
                    <field name="WorkshopName"></field>
                    <field name="WorkshopRoleName"></field>
                    <field name="EmployeeType"></field>
                </fields>
            </model>
        </schema>
    </datasource>
</kendo-grid>