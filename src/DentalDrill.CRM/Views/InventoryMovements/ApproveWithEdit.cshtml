@using DevGuild.AspNetCore.Controls.HybridForms
@using DentalDrill.CRM.Extensions
@model DentalDrill.CRM.Models.ViewModels.InventoryMovements.InventoryMovementApproveWithEditModel
@{
    ViewBag.Title = "Approve Move";
    this.ConfigureHybridPage("InventoryMovementsApproveWithEdit");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Approve Move</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Index" asp-controller="InventoryMovements" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    
    <form asp-action="ApproveWithEdit" asp-route-id="@Model.Movement.Id" hybrid-form-id="InventoryMovementsApproveWithEdit" id="InventoryMovementsApproveWithEditForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="row">
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-12">
                        <label>SKU</label>
                    </div>
                    <div class="col-12">
                        <p class="form-control-plaintext">[@Model.SKU.Type.Name] @Model.SKU.Name</p>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 mb-2">
                <div class="row">
                    <div class="col-12">
                        <label>Type</label>
                    </div>
                    <div class="col-12">
                        <p class="form-control-plaintext">@Model.Movement.Type.ToDisplayName()</p>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 mb-2">
                <div class="row">
                    <div class="col-12">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-12">
                        <input asp-for="Quantity" type="text" class="k-textbox" placeholder="Enter QTY" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <hr />
        
        <div class="row">
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-12">
                        <label asp-for="Comment"></label>
                    </div>
                    <div class="col-12">
                        <textarea asp-for="Comment" class="k-textbox" placeholder="Comment or note for the movement"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Approve</button>
                <a asp-action="Index" asp-controller="InventoryMovements" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>