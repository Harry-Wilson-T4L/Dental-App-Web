@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.JobChangeClientModel
@{
    ViewBag.Title = $"Change client of {Model.Entity.JobType.Name} #{Model.Entity.JobNumber}";
    this.ConfigureHybridPage("JobsChangeClient");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Change client of @Model.Entity.JobType.Name #@Model.Entity.JobNumber</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Edit" asp-route-id="@Model.Entity.Id" class="editor__action"><span class="fas fa-arrow-left"></span> Back</a>
            </div>
        </div>
    }
    
    <form asp-action="ChangeClient" asp-route-id="@Model.Entity.Id" hybrid-form-id="JobsChangeClient" id="JobsChangeClientForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-sm-2_5">
                        <label asp-for="CurrentClientId">Current client</label>
                    </div>
                    <div class="col-sm-9_5" data-toggle="tooltip" data-html="true" data-placement="right" data-offset="-15px"
                         title="&lt;b&gt;Surgery Name:&lt;/b&gt; @Model.Entity.Client.FullName&lt;br&gt;&lt;b&gt;Contact Name:&lt;/b&gt; @Model.Entity.Client.PrincipalDentist&lt;br&gt;&lt;b&gt;Phone:&lt;/b&gt; @Model.Entity.Client.Phone &lt;br&gt;&lt;b&gt;Email:&lt;/b&gt; @Model.Entity.Client.Email">
                        <p class="form-control-plaintext">@Model.Entity.Client.FullName</p>
                    </div>
                </div>
            </div>
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-sm-2_5">
                        <label asp-for="NewClientId">New client</label>
                    </div>
                    <div class="col-sm-9_5">
                        @(Html.Kendo().DropDownListFor(x => x.NewClientId)
                            .DataTextField("FullName")
                            .DataValueField("Id")
                            .Filter("contains")
                            .OptionLabel("Select client...")
                            .MinLength(3)
                            .EnforceMinLength(true)
                            .Height(480)
                            .AutoWidth(true)
                            .Virtual(v => v.ItemHeight(32).MapValueTo("dataItem").ValueMapper("DentalDrill.CRM.Controls.ClientSelectorControl.valueMapper"))
                            .Template("<span title=\"#: FullName#\">#: FullName#</span>")
                            .Popup(popup => popup.Origin("bottom right").Position("top right"))
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .Read(read => read.Action("ClientsAutoComplete", "Jobs", new { }))
                                .Sort(sort => sort.Add("FullName"))
                                .PageSize(15)
                                .ServerOperation(true)))
                        <span asp-validation-for="NewClientId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12 mb-2">
                <div class="alert alert-warning" role="alert">
                    <strong>Warning:</strong> changing client of a job will result in automatic relinking of the handpieces to other handpieces of a new client.
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Edit" asp-route-id="@Model.Entity.Id" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>
