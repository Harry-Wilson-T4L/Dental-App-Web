@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.ClientAttachmentEditModel
@{
    ViewBag.Title = "Edit attachment";
    this.ConfigureHybridPage("ClientAttachmentsEdit");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Edit attachment @Model.Original.File.OriginalName</h1>
            </div>
            <div class="editor__actions">
                <a class="editor__action" asp-action="Details" asp-controller="Clients" asp-route-id="@Model.Original.ClientId" asp-route-Tab="Attachments"><span class="fa fa-list"></span> List</a>
                <a class="editor__action editor__action_color_red" asp-action="Delete" asp-route-id="@Model.Original.Id"><span class="fa fa-trash-alt"></span> Delete</a>
            </div>
        </div>
    }
    
    <form asp-action="Edit" asp-route-id="@Model.Original.Id" hybrid-form-id="ClientAttachmentsEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="row">
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-sm-5">
                        <label class="col-form-label editor__label">File</label>
                    </div>
                    <div class="col-sm-7">
                        <p class="form-control-plaintext">@Model.Original.File.OriginalName</p>
                    </div>
                </div>
            </div>
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-sm-5">
                        <label asp-for="Comment" class="col-form-label editor__label">Comment</label>
                    </div>
                    <div class="col-sm-7">
                        <textarea asp-for="Comment" class="k-textbox"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Details" asp-controller="Clients" asp-route-id="@Model.Original.ClientId" asp-route-Tab="Attachments" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>