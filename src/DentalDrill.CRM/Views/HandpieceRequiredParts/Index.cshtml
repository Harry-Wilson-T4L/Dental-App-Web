@using DevGuild.AspNetCore.Controls.HybridForms
@using DentalDrill.CRM.Extensions
@model DentalDrill.CRM.Models.ViewModels.HandpieceRequiredParts.HandpieceRequiredPartIndexModel
@{
    ViewBag.Titles = "Required Parts";
    this.ConfigureHybridPage("HandpieceRequiredPartIndex");
    var uniqueId = Guid.NewGuid().ToString("N");
}

<div class="editor" id="HandpieceRequiredPartIndexPage_@uniqueId">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Required Parts</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Details" asp-controller="Handpieces" class="editor__action"><span class="fas fa-list"></span> Back</a>
            </div>
        </div>
    }
    
    <div id="HandpieceRequiredPartsCreate">
        <form asp-action="Create"
              asp-route-parentId="@Model.Handpiece.Id"
              asp-route-mode="Inline"
              data-ajax="true"
              data-ajax-mode="replace-with"
              data-ajax-update="#HandpieceRequiredPartsCreate"
              data-ajax-complete="DevGuild.AspNet.Forms.AjaxForms.AjaxFormsManager.handleComplete"
              id="HandpieceRequiredPartsCreateForm">
            <div class="row mb-2">
                <div class="col-12 col-sm-12 col-md-7 mb-2">
                    <div class="row">
                        <div class="col-3">
                            <label for="Create_SKU">SKU</label>
                        </div>
                        <div class="col-9">
                            <kendo-dropdownlist
                                id="Create_SKU"
                                name="SKU"
                                bind-to="@(new SelectList(Model.AvailableSKUs, "Id", "Name").WithNull("(none)"))"
                                value-primitive="true"
                                datavaluefield="Value"
                                datatextfield="Text"
                                filter="FilterType.Contains">
                            </kendo-dropdownlist>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-sm-9 col-md-3 mb-2">
                    <div class="row">
                        <div class="col-3 col-sm-4">
                            <label for="Create_Quantity">Quantity</label>
                        </div>
                        <div class="col-9 col-sm-8">
                            <input type="number" id="Create_Quantity" name="Quantity" class="k-textbox" value="1.00" />
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="col-12 col-sm-3 col-md-2 mb-2 editor__submit">
                    <button type="submit" class="btn btn-primary"><span class="fas fa-plus"></span> Add</button>
                </div>
            </div>
        </form>
    </div>
    
    <div class="row">
        <div class="col-12">
            <div class="handpiece-required-parts__grid-wrapper"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function() {
        var root = document.getElementById("HandpieceRequiredPartIndexPage_@uniqueId");
        var handpieceId = "@Model.Handpiece.Id";
        var page = new DentalDrill.CRM.Pages.HandpieceRequiredParts.Index.HandpieceRequiredPartIndexPage(root, handpieceId);
        page.init();
    });
</script>

@section Scripts
{
    <script type="text/javascript" src="~/js/app/pages/handpieceRequiredParts/index.js" asp-append-version="true"></script>
}
