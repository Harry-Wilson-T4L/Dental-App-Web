@using DevGuild.AspNetCore.Controls.HybridForms
@using DentalDrill.CRM.Extensions
@model DentalDrill.CRM.Models.ViewModels.HandpieceRequiredParts.HandpieceRequiredPartEditModel
@{
    ViewBag.Title = "Edit required part";
    this.ConfigureHybridPage("HandpieceRequiredPartsEdit");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Add required part</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Index" asp-controller="HandpieceRequiredParts" asp-route-parentId="@Model.Original.HandpieceId" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }

    <form asp-action="Edit" asp-route-id="@Model.Original.Id" hybrid-form-id="HandpieceRequiredPartsEdit" id="HandpieceRequiredPartsEditForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-12 col-sm-8 col-md-9 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label>SKU</label>
                    </div>
                    <div class="col-7">
                        <p class="form-control-plaintext">@Model.Original.SKU.Name</p>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-4 col-md-3 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Quantity" class="k-textbox" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Inventory" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>