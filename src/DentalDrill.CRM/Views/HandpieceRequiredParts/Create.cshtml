@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.HandpieceRequiredParts.HandpieceRequiredPartCreateModel
@{
    ViewBag.Title = "Add required part";
    ViewBag.InlineAjaxResponse = Model.InlineAjaxResponse;
    this.ConfigureHybridPage("HandpieceRequiredPartsCreate");

    var isInline = this.Context.Request.Query["mode"].Any(x => String.Equals(x, "Inline", StringComparison.InvariantCultureIgnoreCase));
}

<div class="@(isInline ? "" : "editor")">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Add required part</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Index" asp-controller="HandpieceRequiredParts" asp-route-parentId="@Model.Handpiece.Id" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    
    <form
        asp-action="Create"
        asp-route-parentId="@Model.Handpiece.Id"
        asp-route-mode="@(isInline ? "Inline" : null)"
        hybrid-form-id="HandpieceRequiredPartsCreate"
        id="HandpieceRequiredPartsCreateForm">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-2">
            <div class="col-12 col-sm-12 col-md-7 mb-2">
                <div class="row">
                    <div class="col-3">
                        <label asp-for="SKU"></label>
                    </div>
                    <div class="col-9">
                        <kendo-dropdownlist
                            for="SKU"
                            bind-to="@(new SelectList(Model.AvailableSKUs, "Id", "Name").WithNull("(none)"))"
                            value-primitive="true"
                            datavaluefield="Value"
                            datatextfield="Text"
                            filter="FilterType.Contains">
                        </kendo-dropdownlist>
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-9 col-md-3 mb-2">
                <div class="row">
                    <div class="col-3 col-sm-4">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-9 col-sm-8">
                        <input asp-for="Quantity" class="k-textbox"/>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            @if (isInline)
            {
                <div class="col-12 col-sm-3 col-md-2 mb-2 editor__submit">
                    <button type="submit" class="btn btn-primary"><span class="fas fa-plus"></span> Add</button>
                </div>
            }
        </div>
        
        @if (!isInline)
        {
            <div class="row">
                <div class="col editor__submit">
                    <button type="submit" class="btn btn-primary"><span class="fas fa-plus"></span> Add</button>
                    <a asp-action="Index" asp-controller="HandpieceRequiredParts" asp-route-parentId="@Model.Handpiece.Id" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
                </div>
            </div>
        }
    </form>
</div>