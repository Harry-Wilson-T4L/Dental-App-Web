@using Kendo.Mvc.UI
@using DentalDrill.CRM.Extensions
@using DentalDrill.CRM.Models.ViewModels
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.ClientEditViewModel
@{
    ViewData["Title"] = $"Edit {Model.ClientNo} {Model.Name}";
    this.ConfigureHybridPage("ClientEdit");
}
<div class="editor mb-2">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Edit @Model.ClientNo @Model.Name</h1>
            </div>
            <div class="editor__actions">
                <a class="editor__action" asp-action="Index"><span class="fa fa-list"></span> List</a>
                <a class="editor__action" asp-action="Details" asp-route-id="@Model.Original.Id"><span class="fa fa-external-link-alt"></span> Details</a>
                <a class="editor__action editor__action_color_red" asp-action="Delete" asp-route-id="@Model.Original.Id"><span class="fa fa-trash-alt"></span> Delete</a>
            </div>
        </div>
    }

    <form asp-action="Edit" asp-route-id="@Model.Original.Id" method="post" hybrid-form-id="ClientEdit" id="ClientEditForm">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <partial name="_Editor" model="@Model" />
        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>
