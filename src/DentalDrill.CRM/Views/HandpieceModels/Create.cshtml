@using DentalDrill.CRM.Extensions
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ViewModels.HandpieceModelCreateModel
@{
    ViewBag.Title = $"Add model to {Model.Parent.Name}";
    this.ConfigureHybridPage("HandpieceModelCreate");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Add model to @Model.Parent.Name</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Index" asp-controller="HandpieceBrands" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    <form asp-action="Create" asp-route-parentId="@Model.Parent.Id" hybrid-form-id="HandpieceModelCreate" id="HandpieceModelCreateForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-12 col-sm-5 col-md-4 mb-2">
                <div class="row">
                    <div class="col-12">
                        <label asp-for="ImageId"></label>
                    </div>
                    <div class="col-12">
                        <image-uploader asp-for="ImageId" configuration="HandpieceModel" preview-variation="300"></image-uploader>
                        <span asp-validation-for="ImageId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-7 col-md-8">
                <div class="row mb-2">
                    <div class="col-5">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Name" class="k-textbox w-100" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-5">
                        <label asp-for="Type"></label>
                    </div>
                    <div class="col-7">
                        @Html.Kendo().DropDownListFor(x => x.Type).HtmlAttributes(new { @class = "w-100" }).BindTo(HandpieceSpeedHelper.MakeSelectList()).Value(Model.Type.ToString())
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-12">
                        <textarea asp-for="Description" class="k-textbox w-100"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" asp-controller="HandpieceBrands" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>