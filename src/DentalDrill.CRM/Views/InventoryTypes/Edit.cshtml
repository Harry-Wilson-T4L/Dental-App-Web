@using DevGuild.AspNetCore.Controls.HybridForms
@using DentalDrill.CRM.Extensions
@model DentalDrill.CRM.Models.ViewModels.InventoryTypes.InventorySKUTypeEditModel
@{
    ViewBag.Title = "Edit SKU Type";
    this.ConfigureHybridPage("InventoryTypesEdit");
}

<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Edit SKU Type</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Index" asp-controller="Inventory" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    <form asp-action="Edit" asp-route-id="@Model.Original.Id" hybrid-form-id="InventoryTypesEdit" id="InventoryTypesEditForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-12 col-sm-5 col-md-6 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Name" class="k-textbox" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-5 col-md-6 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="HandpieceSpeedCompatibility"></label>
                    </div>
                    <div class="col-7">
                        <kendo-multiselect for="HandpieceSpeedCompatibility"
                                           bind-to="@HandpieceSpeedCompatibilityHelper.MakeSelectList()"
                                           value-primitive="true"
                                           value="@Model.HandpieceSpeedCompatibility.Select(x => x.ToString()).ToArray()"
                                           auto-close="false"
                                           datavaluefield="Value"
                                           datatextfield="Text">
                        </kendo-multiselect>
                        <span asp-validation-for="HandpieceSpeedCompatibility" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-5 col-md-6 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="StatisticsMode"></label>
                    </div>
                    <div class="col-7">
                        <kendo-dropdownlist for="StatisticsMode"
                                            bind-to="@InventorySKUTypeStatisticsModeHelper.MakeSelectList()"
                                            value-primitive="true"
                                            value="@Model.StatisticsMode"
                                            datavaluefield="Value"
                                            datatextfield="Text">
                        </kendo-dropdownlist>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Inventory" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>