@using DevGuild.AspNetCore.Controls.HybridForms
@using DentalDrill.CRM.Extensions
@using DentalDrill.CRM.Models.ViewModels.InventoryTypes
@model DentalDrill.CRM.Models.ViewModels.InventoryTypes.InventorySKUTypeSortModel
@{
    ViewBag.Title = "Sort SKU Type";
    this.ConfigureHybridPage("InventoryTypesSort");
    var uniqueId = Guid.NewGuid().ToString("N");
}

<div class="editor" id="InventoryTypesSortEditor_@uniqueId">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>Sort SKU Type</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Index" asp-controller="Inventory" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }
    <form asp-action="Sort" asp-route-id="@Model.Original.Id" hybrid-form-id="InventoryTypesSort" id="InventoryTypesSortForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Scope"></label>
                    </div>
                    <div class="col-7">
                        <kendo-radiogroup for="Scope"
                                          label-position="RadioGroupLabelPosition.After"
                                          layout="RadioGroupLayout.Vertical">
                            <kendo-radiogroup-items>
                                <kendo-radiogroup-item value="All" label="All SKUs" />
                                <kendo-radiogroup-item value="TopLevel" label="Top-level SKUs" />
                                <kendo-radiogroup-item value="Specific" label="Children of specific SKU" />
                                <kendo-radiogroup-item value="SpecificRecursive" label="Children of specific SKU recursive" />
                            </kendo-radiogroup-items>
                        </kendo-radiogroup>
                        <span asp-validation-for="Scope" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="SpecificSKU" disabled="disabled"></label>
                    </div>
                    <div class="col-7">
                        <kendo-dropdownlist for="SpecificSKU"
                                            datavaluefield="Id"
                                            datatextfield="Name"
                                            bind-to="@Model.AvailableGroupSKUs.Select(x => new { Id = x.Id, Name = x.Name })"
                                            enable="false"
                                            value-primitive="true">
                        </kendo-dropdownlist>
                        <span asp-validation-for="SpecificSKU" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Method"></label>
                    </div>
                    <div class="col-7">
                        <kendo-radiogroup for="Method"
                                          label-position="RadioGroupLabelPosition.After"
                                          layout="RadioGroupLayout.Vertical">
                            <kendo-radiogroup-items>
                                <kendo-radiogroup-item value="AlphaAscending" label="Alphabetically A to Z" />
                                <kendo-radiogroup-item value="AlphaDescending" label="Alphabetically Z to A" />
                            </kendo-radiogroup-items>
                        </kendo-radiogroup>
                        <span asp-validation-for="Method" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Sort</button>
                <a asp-action="Index" asp-controller="Inventory" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
    <script type="text/javascript">
        $(function() {
            var editor = new DentalDrill.CRM.Pages.InventoryTypes.Sort.InventoryTypeSortEditor(document.getElementById("InventoryTypesSortEditor_@uniqueId"));
            editor.init();
        });
    </script>
</div>

@section Scripts
{
    <script type="text/javascript" src="/js/app/pages/inventoryTypes/sort.js" asp-append-version="true"></script>
}
