@model DentalDrill.CRM.Models.ViewModels.Identity.Manage.AppearanceViewModel
@{
    ViewBag.Title = "Appearance";
    ViewData.AddActivePage(ManageNavPages.Appearance);
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="@Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Theme"></label>
                <kendo-dropdownlist for="Theme" bind-to="@(new SelectList(Model.AvailableThemes, "Key", "Name"))" value="@Model.Theme" />
                <span asp-validation-for="Theme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background">Background <span class="fas fa-fw fa-times file-uploader-clear"></span></label>
                <file-uploader asp-for="Background" configuration="EmployeeBackground"></file-uploader>
                <span asp-validation-for="Background" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Opacity"></label>
                <div>
                    <kendo-slider name="OpacitySlider" for="Opacity" min="0" max="1" small-step="0.01" large-step="0.1"></kendo-slider>
                </div>
                <span asp-validation-for="Opacity" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        (function() {
            $(".file-uploader-clear").on("click", () => {
                $("#Background").val("");
                var upload = $(".file-uploader__upload").data("kendoUpload");
                if (upload) {
                    upload.clearAllFiles();
                }
            });
        })();
    </script>
}
