@using Kendo.Mvc.UI
@using DentalDrill.CRM.Extensions
@using DentalDrill.CRM.Models.ViewModels
@using DevGuild.AspNetCore.Controls.HybridForms
@model ClientNoteEditViewModel
@{
    ViewData["Title"] = "New Note";

    this.ConfigureHybridPage("CreateNote");
}
<div class="editor">
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="editor__header">
            <div class="editor__title">
                <h1>New Note</h1>
            </div>
            <div class="editor__actions">
                <a asp-action="Details" asp-controller="Clients" asp-route-id="@Model.Parent.Id" asp-route-Tab="Notes" class="editor__action"><span class="fas fa-list"></span> List</a>
            </div>
        </div>
    }

    <form asp-action="Create" asp-route-parentId="@Model.Parent.Id" hybrid-form-id="CreateNote">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
       
        <div class="row">
            <div class="col-12 mb-2">
                @Html.TextAreaFor(x => x.Text, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(x => x.Text)
            </div>
        </div>

        <div class="row">
            <div class="col editor__submit">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Details" asp-controller="Clients" asp-route-id="@Model.Parent.Id" asp-route-Tab="Notes" class="btn btn-outline-secondary ml-2 editor__submit__cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {

}