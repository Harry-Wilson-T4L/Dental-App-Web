@using DentalDrill.CRM.Extensions
@using DentalDrill.CRM.Models.ViewModels
@using DevGuild.AspNetCore.Controls.HybridForms
@model DentalDrill.CRM.Models.ClientNote
@{
    ViewData["Title"] = $"Note";
    this.ConfigureHybridPage("DetailsNote");
}

<div class="details mb-4">    
    @if (!this.Context.IsAjaxRequest())
    {
        <div class="details__header">
            <div class="details__title">
                <h1>Note</h1>
            </div>
            <div class="details__actions">
                <a class="details__action" asp-action="Details" asp-controller="Clients" asp-route-id="@Model.ClientId" asp-route-Tab="Notes"><span class="fas fa-list"></span> List</a>
                <a class="details__action" asp-action="Edit" asp-route-id="@Model.Id"><span class="fas fa-pencil-alt"></span> Edit</a>
                <a class="details__action  details__action_color_red" asp-action="Delete" asp-route-id="@Model.Id"><span class="fas fa-trash-alt"></span> Delete</a>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="row details__field">
                <div class="details__label">
                    @Html.DisplayNameFor(x => x.Creator)
                </div>
                <div class="details__value">
                    @Model.Creator.FirstName @Model.Creator.LastName
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row details__field">
                <div class="details__label">
                    @Html.DisplayNameFor(x => x.Created)
                </div>
                <div class="details__value">
                    <local-date-time value="@Model.Created" format="g" />
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="row details__field" style="white-space: pre-wrap;">@Model.Text</div>
        </div>
    </div>
</div>

@section Scripts {

}